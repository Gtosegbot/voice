# Crie o arquivo .env
cat > .env << 'EOL'
# Configurações do Servidor Web
PORT=5001
DEBUG=True
SECRET_KEY=sua-chave-secreta-muito-segura-aqui

# Configurações do WebSocket
WS_PORT=8765
JWT_SECRET=sua-chave-jwt-secreta-aqui

# Configurações de Banco de Dados
DB_HOST=localhost
DB_USER=usuario_db
DB_PASSWORD=senha_db
DB_NAME=disparoseguro

# Configurações de Serviços Externos
OPENAI_API_KEY=sua-chave-openai-aqui
STRIPE_SECRET_KEY=sua-chave-stripe-aqui
STRIPE_PUBLISHABLE_KEY=sua-chave-publica-stripe-aqui
SENDGRID_API_KEY=sua-chave-sendgrid-aqui
EOL

# NÃO adicione o .env ao Git - ele deve ser ignorado pelo .gitignore
